@model MANmanager.characterdata
@{
    ViewBag.Title = "create-Character";
}

<form action="/Character/Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Create</legend>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "form-label mt-4" })
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter The Anime Name" } })
            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.type, htmlAttributes: new { @class = "form-label mt-4" })
            <select id="type" name="type" class="form-select">
                <option value="novel">NOVEL</option>
                <option value="manhwa" selected>MANHWA</option>
                <option value="anime">ANIME</option>
            </select>
            @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.typeid, htmlAttributes: new { @class = "control-label mt-4" })
            @Html.EditorFor(model => model.typeid, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter The Number Of Chapter" } })
            @Html.ValidationMessageFor(model => model.typeid, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.pic, htmlAttributes: new { @class = "control-label mt-4" })
            <input class="form-control" type="file" id="pic" name="pic">
            @Html.ValidationMessageFor(model => model.pic, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.bio, htmlAttributes: new { @class = "control-label mt-4" })
            <textarea class="form-control" id="bio" rows="10" name="bio"></textarea>
            @Html.ValidationMessageFor(model => model.bio, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.plot, htmlAttributes: new { @class = "control-label mt-4" })
            <textarea class="form-control" id="plot" rows="10" name="plot"></textarea>
            @Html.ValidationMessageFor(model => model.plot, "", new { @class = "text-danger" })
        </div>
        <button type="submit" value="Create" class="btn btn-primary">Submit</button>
        <div>
            @Html.ActionLink("Back to Character", "Index", "Character")
        </div>
    </fieldset>
</form>